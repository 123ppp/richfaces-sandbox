<?xml version="1.0" encoding="UTF-8"?>

<cdk:root xmlns="http://jboss.org/schema/richfaces/cdk/xhtml-el"
          xmlns:cdk="http://jboss.org/schema/richfaces/cdk/core"
          xmlns:cc="http://jboss.org/schema/richfaces/cdk/jsf/composite">

    <cc:interface>
        <cdk:class>org.richfaces.bootstrap.ui.gridRow.GridRowRenderer</cdk:class>
        <cdk:superclass>org.richfaces.bootstrap.ui.gridRow.GridRowRendererBase</cdk:superclass>
        <cdk:renderer-type>org.richfaces.bootstrap.GridRowRenderer</cdk:renderer-type>
        <cdk:component-base-class>org.richfaces.bootstrap.ui.gridRow.AbstractGridRow</cdk:component-base-class>
    </cc:interface>

    <cc:implementation>
        <div id="#{clientId}" class="row#{component.isFluid() ? '-fluid' : ''} #{component.attributes['styleClass']}"
             cdk:passThrough="style title on*">
            <cdk:body />
        </div>
    </cc:implementation>

</cdk:root>
