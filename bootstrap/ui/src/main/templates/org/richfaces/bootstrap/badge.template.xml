<?xml version="1.0" encoding="UTF-8"?>

<cdk:root xmlns="http://jboss.org/schema/richfaces/cdk/xhtml-el"
          xmlns:cdk="http://jboss.org/schema/richfaces/cdk/core"
          xmlns:c="http://jboss.org/schema/richfaces/cdk/jstl/core"
          xmlns:cc="http://jboss.org/schema/richfaces/cdk/jsf/composite">

    <cc:interface>
        <cdk:class>org.richfaces.bootstrap.renderkit.BadgeRenderer</cdk:class>
        <cdk:superclass>org.richfaces.bootstrap.renderkit.BadgeRendererBase</cdk:superclass>
        <cdk:renderer-type>org.richfaces.bootstrap.BadgeRenderer</cdk:renderer-type>
        <cdk:component-base-class>org.richfaces.bootstrap.component.AbstractBadge</cdk:component-base-class>
    </cc:interface>

    <cc:implementation>
        <span id="#{clientId}"
            class="badge #{component.severity != null ? component.severity.badgeClass : ''} #{component.attributes['styleClass']}"
            cdk:passThrough="style">
            
            <c:if test="#{component.value != null and !component.value.equals('')}">#{component.value}</c:if>
        
            <cdk:body />
        </span>
    </cc:implementation>

</cdk:root>
